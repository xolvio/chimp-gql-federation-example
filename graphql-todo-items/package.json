  "main": "index.js",
  "scripts": {
    "api:generate": "ts-node ./generateApiForMicroservice",
    "graphql:codegen": "chimp gql:generate && npm run prettify:all",
    "graphql:generateAll": "npm run graphql:codegen && npm run graphql:generateSchema && npm run graphql:typegen",
    "graphql:generateSchema": "ts-node -r tsconfig-paths/register ./generated/graphql/printSchema.ts > ./schema.graphql",
    "graphql:typegen": "graphql-codegen --config codegen.js && node ./fix-generated.js",
    "lint": "eslint --fix --ext .ts --quiet --cache src/",
    "postinstall": "npm run graphql:generateAll",
    "prettify:all": "npx prettier --write \"src/**/*.ts\" \"generated/**/*.ts\" --loglevel error",
    "start:ts": "JWT_SECRET='Yp3s6v9y$B&E)H@McQfThWmZq4t7w!z%' nodemon -r tsconfig-paths/register --config ./nodemon.run.json ./src/index.ts",
    "start": "npm run start:ts",
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "precommit": "lint-staged"
  },
